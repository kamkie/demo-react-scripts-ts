{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-plugin-prettier",
    "tslint-consistent-codestyle"
  ],
  "rules": {
    "prettier": [
      true,
      ".prettierrc",
      {
        "editorconfig": true
      }
    ],
    "interface-name": [
      true,
      "never-prefix"
    ]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
